{
  "extends": ["@schematics/angular"],
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ng-add": {
      "factory": "./src/add/index#ngAdd",
      "aliases": ["routerkit-init"],
      "description": "Add and install RouterKit in package.json",
      "schema": "schema.add.json"
    },
    "parse": {
      "factory": "./src/parse/index#parse",
      "aliases": ["routerkit-parse"],
      "description": "Parse the project and generate routes type",
      "schema": "schema.parse.json"
    }
  }
}
